<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coding"
    tools:context=".ui.GetUserTexts">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_weight="10"
        android:name="com.example.devlibs.adapter.editTextsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".fragment.InputTextsFragment"
        tools:listitem="@layout/edittexts_item" />

    <Button
        android:id="@+id/bttn_set_words"
        android:layout_margin="8dp"
        android:text="Set Words"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>